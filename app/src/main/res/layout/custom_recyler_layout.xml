<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_background_no_corners"
    android:orientation="horizontal"
    android:padding="0dp">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/titleN"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:paddingStart="10dp"
        android:text="title"
        android:textSize="16sp" />

    <!-- CheckBox -->
    <CheckBox
        android:id="@+id/checkBox111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@null"
        android:backgroundTint="@null"
        android:backgroundTintMode="@null"
        android:button="@drawable/checkbox_custom"
        android:buttonTint="@null"
        android:textColor="@null"
        android:textColorHighlight="@null"
        android:textColorHint="@null"
        android:textColorLink="@null"
        app:useMaterialThemeColors="false" /> <!-- Disable theme tinting -->

</LinearLayout>