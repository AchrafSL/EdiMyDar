<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rad"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="5dp">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF5722"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Title Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Task"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Input Field -->
    <EditText
        android:id="@+id/task_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_edittext_background"
        android:hint="What do you need to do?"
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:minLines="3"
        android:padding="12dp" />

    <!-- Date Selection Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <!-- Date Input Field -->
        <LinearLayout
            android:id="@+id/dateTarget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext_background"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Label -->
            <TextView
                android:id="@+id/select_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Select date"
                android:textColor="#666666"
                android:textSize="14sp" />

            <!-- Calendar Icon -->
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:src="@drawable/calendar_svgrepo_com"
                app:tint="@null" />
        </LinearLayout>

        <!-- Time Input Field -->
        <LinearLayout
            android:id="@+id/timeTarget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_edittext_background"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Label -->
            <TextView
                android:id="@+id/select_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Select time"
                android:textColor="#666666"
                android:textSize="14sp" />

            <!-- Clock Icon -->
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:src="@drawable/clock"
                app:tint="@null" />
        </LinearLayout>

        <!-- Date Options -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <!-- Today Button -->
            <Button
                android:id="@+id/today_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="Today"
                android:textColor="#333333" />

            <!-- Tomorrow Button -->
            <Button
                android:id="@+id/tomorrow_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="Tomorrow"
                android:textColor="#333333" />

            <!-- No Date Button -->
            <Button
                android:id="@+id/no_date_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="No date"
                android:textColor="#333333" />
        </LinearLayout>
    </LinearLayout>

    <!-- Button Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="end"
        android:orientation="horizontal">

        <!-- Cancel Button -->
        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="Cancel"
            android:textColor="#000000" />

        <!-- Add Task Button -->
        <Button
            android:id="@+id/add_task_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle"
            android:backgroundTint="@color/lomouniHarban"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="Add Task"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>