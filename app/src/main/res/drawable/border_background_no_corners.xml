<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Transparent background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000" /> <!-- Fully transparent -->
        </shape>
    </item>

    <!-- Bottom border -->
    <item android:top="-2dp" android:left="-2dp" android:right="-2dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" /> <!-- Transparent fill -->
            <stroke
                android:width="2dp"
                android:color="#A2A0A0" /> <!-- Black stroke -->
        </shape>
    </item>
</layer-list>