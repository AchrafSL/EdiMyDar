<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Top Rectangle -->
    <item> <!-- Leave space for the bottom rectangle -->

        <shape android:shape="rectangle">
            <solid android:color="#8C8482" /> <!-- Bottom rectangle color (same as top) -->


        </shape>
    </item>

    <!-- Bottom Rectangle -->
    <item
        android:bottom="5dp"> <!-- Start at 90% of the height -->

        <shape android:shape="rectangle">
            <solid android:color="#E7DBD6" /> <!-- Bottom rectangle color (same as top) -->
            <corners
                android:topLeftRadius="5dp"
                android:topRightRadius="5dp" />
        </shape>
    </item>

</layer-list>